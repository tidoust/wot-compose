{
  "$schema": "http://json-schema.org/schema#",
  "title": "Web of Thing Label Schema",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "createdAt",
    "tags",
    "customFields"
  ],
  "properties": {
    "id": {
      "type": "string", "pattern": "^[A-Za-z0-9_]$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "customFields": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}